<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% stylesheets
            '../bower_components/semantic/build/packaged/css/semantic.min.css'
            'bundles/guuterdashboard/css/main.css'
        %}
            <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        {% for type, messages in app.session.flashBag.all %}
            {% for message in messages %}
                <div class="{{ type }}">
                    {{ message|trans({}, 'FOSUserBundle') }}
                </div>
            {% endfor %}
        {% endfor %}

        <div style="height: 100%;display: table;
table-layout: fixed;
border-spacing: 0;
width: 100%;">
            <aside style="background:#12131a;display: table-cell;
vertical-align: top;
height: 100%;
float: none;
width: 240px;
color:rgba(255, 255, 255, 0.6);" class="bg-black aside-md hidden-print" id="nav">
                {{ render(controller('GuuterUserBundle:User:aside')) }}
            </aside>
            <div style="padding:30px;display: table-cell;
vertical-align: top;
height: 100%;
float: none;" id="content">{% block content %}{% endblock %}</div>
        </div>
        {% block javascripts %}
        {% javascripts
            '../bower_components/jquery/dist/jquery.min.js'
            '../bower_components/semantic/build/packaged/javascript/semantic.min.js'
        %}
            <script src="{{ asset_url }}" type="text/javascript"></script>
        {% endjavascripts %}
        <script type="text/javascript">
            $('.ui.dropdown').dropdown();
        </script>
        {% endblock %}
    </body>
</html>
